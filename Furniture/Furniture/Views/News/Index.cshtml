
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="furnitures_section layout_padding">
    <form asp-action="Index" method="get">
        <div class="form-actions no-color d-flex justify-content-center">
            <p>
                Find: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a href="/tin-tuc">Back to Full List</a>
            </p>
        </div>
    </form>
    <div class="container">
        <h1 class="our_text">News</h1>
        <p class="ipsum_text">There are a lot of news of our customers.</p>
        <div class="furnitures_section2 layout_padding">
            @{Html.RenderAction("getAllNews", "Default");}
        </div>
    </div>
</div>

