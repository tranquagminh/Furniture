@model Furniture.Models.OrderViewModel

@using (Ajax.BeginForm("CheckOut", "ShoppingCart", new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "load_data",
        OnComplete="OnSuccessCO",
        OnFailure = "OnFailure"
    },new {@Id = "myForm"}))
    {
        @Html.AntiForgeryToken()
        <h3>Information of customer</h3>
        <div class="form-group">
            <label>Full Name</label>
            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control", @name = "CustomerName", @style = "margin-top:-2px", @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.CustomerName, null, new { @class = "text-danger" })
            @*<label>Full Name</label>
        <input type="text" name="CustomerName" required class="form-control" style="margin-top:-2px" autocomplete="off" />*@
        </div>
        <div class="form-group">
            <label>Phone</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @name = "Phone", @style = "margin-top:-2px", @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
            @*<label>Phone</label>
        <input type="text" name="Phone" class="form-control" style="margin-top:-2px" autocomplete="off" />*@
        </div>
        <div class="form-group">
            <label>Address</label>
            @Html.TextBoxFor(x => x.Addres, new { @class = "form-control", @name = "Addres", @style = "margin-top:-2px", @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Addres, null, new { @class = "text-danger" })
            @*<label>Address</label>
        <input type="text" name="Addres" class="form-control" style="margin-top:-2px" autocomplete="off" />*@
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new {@type = "email", @class = "form-control", @name = "Email", @style = "margin-top:-2px", @autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
            @*<label>Email</label>
            <input type="email" name="Email" class="form-control" style="margin-top:-2px" autocomplete="off" />*@
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-block btn-success" value="Order"/>
        </div>
    }

